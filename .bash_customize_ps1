export GITAWAREPROMPT=$HOME/.bash/git-aware-prompt
source "${GITAWAREPROMPT}/main.sh"

export COLOR_BLUE="\[\033[38;5;45m\]"
export COLOR_GREEN="\[\033[38;5;35m\]"
export COLOR_YELLOW="\[\033[38;5;226m\]"
export COLOR_PINK="\[\033[38;5;203m\]"
export COLOR_ORANGE="\[\033[38;5;208m\]"
export COLOR_RED="\[\033[38;5;1m\]"
export COLOR_PURPLE="\[\033[38;5;177m\]"
export COLOR_PURPLE_DEEP="\[\033[38;5;93m\]"
export COLOR_PURPLE_LIGHT="\[\033[38;5;189m\]"

export FONT_RESET="\[$(tput sgr0)\]"
export FONT_BOLD="\[$(tput bold)\]"

# https://emojipedia.org
export EMOJI_LAPTOP="ðŸ’»"
export EMOJI_CONTAINER="ðŸ“¦"
export EMOJI_SUNGLASSES="ðŸ˜Ž"

# Customize PS1 for bash
# arg1 - user/host color
# arg2 - workspace color
# arg3 - time color
# arg5 - separator color
function custom_ps1() {
        local prim_color=""
        local work_color=""
        local time_color=""
        local sep_color=""
        local emoji="${EMOJI_LAPTOP}"
        if [ ${CONTAINER_ID+x} ]; then
                emoji="${EMOJI_CONTAINER}"
        fi
        if [ "$EUID" -eq 0 ]; then
                emoji="${EMOJI_SUNGLASSES}${emoji}"
        fi
        if [ -n $1 ]; then
                prim_color="$1"
        fi
        if [ -n $2 ]; then
                work_color="$2"
        fi
        if [ -n $3 ]; then
                time_color="$3"
        fi
        if [ -n $4 ]; then
                sep_color="$4"
        fi
        export PS1="$emoji \
$prim_color\u \
$sep_color@$FONT_RESET \
$prim_color\h \
$sep_color:$FONT_RESET \
$work_color\w \
\[$txtcyn\]\$git_branch\[$txtred\]\$git_dirty\[$txtrst\] \
$sep_color>$FONT_RESET \
$time_color\T\
\n\
$sep_color$ $FONT_RESET"
}

